<Window x:Class="TrayTranslator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:TrayTranslator"
        mc:Ignorable="d" FontSize="24"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock x:Name="Data"></TextBlock>
            <Button x:Name="getData" Padding="20 10" Click="getData_Click">Get Data</Button>
            <Button x:Name="openChildForm" Padding="20 10" Click="openChildForm_Click">Open child forms</Button>
        </StackPanel>
        <tb:TaskbarIcon x:Name="MyIcon"
              IconSource="Icons/error.ico"
              ToolTipText="hello world"
            />
    </Grid>
    
</Window>
